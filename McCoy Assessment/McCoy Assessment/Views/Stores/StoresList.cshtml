@model IEnumerable<McCoy_Assessment.Models.StoreModel>

@{
    ViewBag.Title = "View";
}

<h2>Stores List</h2>

<p>
    @Html.ActionLink("Create New", "Insert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StoreNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StoreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StoreManagerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CloseTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StoreNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StoreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StoreManagerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpenTime@*.Value.TimeOfDay*@)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CloseTime@*.Value.TimeOfDay*@)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { item.StoreNumber }) |
            @Html.ActionLink("Details", "Details", new { item.StoreNumber }) |
            @Html.ActionLink("Delete", "Delete", new { item.StoreNumber })
        </td>
    </tr>
}

</table>
